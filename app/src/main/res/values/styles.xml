<resources>
    <!-- Base Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">?android:attr/textColorPrimaryInverse</item>
    </style>

    <!-- TabLayout Text Size. -->
    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonColor" parent="Theme.AppCompat.NoActionBar">
        <item name="colorButtonNormal">@color/primaryColor</item>
    </style>
</resources>
